<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    android:padding="15dp"
    tools:layout_width="640dp"
    tools:layout_height="360dp"
    tools:background="#D3D3D3">

    <org.evilbinary.tv.widget.RoundedFrameLayout
        android:id="@+id/view_list"
        android:layout_width="193.33dp"
        android:layout_height="match_parent"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:radius="4dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/bg_down"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:background="@drawable/border_down_shape"
            android:gravity="center"
            android:padding="15dp"
            android:text="我的电影"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </org.evilbinary.tv.widget.RoundedFrameLayout>

    <org.evilbinary.tv.widget.RoundedFrameLayout
        android:id="@+id/view_add"
        android:layout_width="193.33dp"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="@+id/view_list"
        app:layout_constraintLeft_toRightOf="@+id/view_list"
        app:radius="4dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rect_add"
            android:src="@drawable/ic_add"
            android:padding="70dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:background="@drawable/border_down_shape"
            android:gravity="center"
            android:padding="15dp"
            android:text="新增"
            android:textColor="@color/white"
            android:textSize="15dp" />

    </org.evilbinary.tv.widget.RoundedFrameLayout>

    <org.evilbinary.tv.widget.RoundedFrameLayout
        android:id="@+id/view_setting"
        android:layout_width="193.33dp"
        android:layout_height="match_parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/view_add"
        android:layout_marginStart="15dp"
        android:focusable="true"
        app:radius="4dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rect_setting"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:background="@drawable/border_down_shape"
            android:gravity="center"
            android:padding="15dp"
            android:text="设置"
            android:textColor="@color/white"
            android:textSize="15dp" />

    </org.evilbinary.tv.widget.RoundedFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>